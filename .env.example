# Environment variables for AI Government Consultant
# Copy this file to .env and update the values

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
SERVER_READ_TIMEOUT=30
SERVER_WRITE_TIMEOUT=30

# Database Configuration
MONGO_URI=mongodb://localhost:27017
MONGO_DATABASE=ai_government_consultant
MONGO_MAX_POOL_SIZE=100

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# AI Configuration
LLM_PROVIDER=gemini
LLM_API_KEY=your-gemini-api-key-here
EMBEDDING_MODEL=text-embedding-004

# Research Service Configuration
NEWS_API_KEY=your-news-api-key-here
NEWS_API_BASE_URL=https://newsapi.org/v2
RESEARCH_LLM_MODEL=gemini-2.0-flash
RESEARCH_MAX_CONCURRENT_REQUESTS=5
RESEARCH_REQUEST_TIMEOUT=30
RESEARCH_CACHE_ENABLED=true
RESEARCH_CACHE_TTL=3600
RESEARCH_DEFAULT_LANGUAGE=en
RESEARCH_MAX_SOURCES_PER_QUERY=20
RESEARCH_MIN_CREDIBILITY_SCORE=0.6
RESEARCH_MIN_RELEVANCE_SCORE=0.5

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
ENCRYPTION_KEY=your-32-character-encryption-key-here
TLS_CERT_PATH=
TLS_KEY_PATH=

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Development Configuration
GIN_MODE=release
GO_ENV=production